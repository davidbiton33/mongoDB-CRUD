<h3>{{viewTitle}}</h3>

<form action="/user" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{user._id}}">
    <div class="form-group">
        <label>שם מלא</label>
        <input type="text" class="form-control" name="fullName" placeholder="שם מלא" value="{{user.fullName}}">
        <div class="text-danger">
            {{user.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>מייל</label>
        <input type="text" class="form-control" name="email" placeholder="מייל" value="{{user.email}}">
        <div class="text-danger">
            {{user.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>טלפון</label>
            <input type="text" class="form-control" name="mobile" placeholder="טלפון" value="{{user.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>עיר</label>
            <input type="text" class="form-control" name="city" placeholder="עיר" value="{{user.city}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> שלח</button>
        <a class="btn btn-secondary" href="/user/list"><i class="fa fa-list-alt"></i> הצג הכול</a>
    </div>
</form>